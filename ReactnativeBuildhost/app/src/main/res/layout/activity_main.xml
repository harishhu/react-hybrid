<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/rnserver_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请设置RN Server:"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize="16dp"/>

    <EditText
        android:id="@+id/rnserver_edit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/rnserver_label"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:hint="example:192.168.8.8"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/rnserver_module"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请设置entry module:"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/rnserver_edit"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:textSize="16dp"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/module_edit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/rnserver_module"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:hint="index"
        android:textSize="16dp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/open"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp"
        android:text="打开"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Powered by ZAKJ-APPSDK-V1.0.0"
        app:layout_constraintTop_toBottomOf="@id/open"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="10dp"
        android:textColor="@color/gray"
        android:layout_marginTop="14dp"/>

</android.support.constraint.ConstraintLayout>
